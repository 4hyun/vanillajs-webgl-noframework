{
  "name": "vanilla-js-webpack-boilerplate",
  "version": "1.0.0",
  "description": "vanillajs with webpack configured from scratch with commonly used loaders",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "backend:build": "babel server/app.js -d server/dist",
    "backend:start": "nodemon -e pug --exec \"babel-node server/app.js\"",
    "frontend:dev": "webpack serve --progress --config webpack.config.dev.js",
    "frontend:build": "webpack --progress --config webpack.config.build.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Sa Hwang",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.2",
    "@babel/node": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "eslint": "^8.17.0",
    "file-loader": "^6.2.0",
    "glslify-loader": "^2.0.0",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "mini-css-extract-plugin": "^2.5.3",
    "nodemon": "^2.0.16",
    "postcss-loader": "^6.2.1",
    "pug": "^3.0.2",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "express": "^4.18.1"
  }
}
