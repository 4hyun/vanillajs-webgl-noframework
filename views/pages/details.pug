extends ../layout

block variables
  - const template = 'details';

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=project.data.image.alt src=project.data.image.url)

      .detail__information
        p.detail__information__project-category=project.data.project_category.data.title

        h1.detail__information__title=project.data.title

        .detail__information__content
          .detail__information__highlights
            each highlight in project.data.highlights
              p.detail__information__highlight
                svg.detail__information__highlight__icon
                  use(xlink:href=`sprite-${highlight.highlights_icon.toLowerCase()}`)

          .detail__information__list
            each item in project.data.informations
              p.detail__information__item
                strong.detail__information__item__title=item.informations_label
                span.detail__information__item__description=item.informations_description

          a.detail__information__link(href=project.data.link_url.url target="_blank")=project.data.link_text
